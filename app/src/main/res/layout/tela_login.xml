<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fundo">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/txtNome"
        android:ems="10"
        android:id="@+id/txtNome"
        android:layout_marginBottom="30dp"
        style="@android:style/Theme.Black"
        android:background="#842b2b2b"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_above="@+id/txtSenha"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtSenha"
        android:layout_marginBottom="20dp"
        android:text="@string/txtSenha"
        android:background="#842b2b2b"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_above="@+id/btnLogar"
        android:layout_alignStart="@+id/txtNome"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLogar"
        android:id="@+id/btnLogar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ff131313"
        android:textColor="#ffffffff" />
</RelativeLayout>