<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000">

    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/pesquisa"
        android:onClick="novaPostagem" />

    <EditText
        android:id="@+id/descricao_foto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_postar_foto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_foto"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/descricao_foto"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/btn_postar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff000000"
        android:text="@string/btn_postar_foto"
        android:textColor="#ffffffff"
        android:onClick="salvarPostagem" />
</RelativeLayout>
